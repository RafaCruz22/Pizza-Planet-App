<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            >

            <TextView
                android:id="@+id/bev_water"
                style="@style/AppTheme.DefaultFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="@string/water" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATC"
                android:layout_row="0"
                android:layout_column="2"
                android:padding="16dp"
                />


            <TextView
            android:id="@+id/bev_sprite"
            style="@style/AppTheme.DefaultFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sprite"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sprite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATC"
                android:layout_row="1"
                android:layout_column="2"
                android:padding="16dp"
                />

        <TextView
            android:id="@+id/bev_coke"
            style="@style/AppTheme.DefaultFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coca_cola"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_coke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATC"
                android:layout_row="2"
                android:layout_column="2"
                android:padding="16dp"
                />

        <TextView
            android:id="@+id/bev_Pepsi"
            style="@style/AppTheme.DefaultFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pepsi"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Pepsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATC"
                android:layout_row="3"
                android:layout_column="2"
                android:padding="16dp"
                />

            <TextView
                android:id="@+id/bev_IcedTea"
                style="@style/AppTheme.DefaultFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:text="@string/iced_tea"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_tea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATC"
                android:layout_row="4"
                android:layout_column="2"
                android:padding="16dp"
                />

    </GridLayout>

    </LinearLayout>

</ScrollView>