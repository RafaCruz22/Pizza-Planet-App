        <item name="android:textSize">22sp</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="DetailText"
        parent="TextAppearance.AppCompat.Headline"/>
    <style name="Title"
        parent="TextAppearance.AppCompat.Headline"/>
